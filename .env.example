# =============================================================================
# LOCAL ONLY — Copy to .env and fill in. NEVER commit .env to Git (it's in .gitignore).
# This file is safe to commit; it contains no secrets.
# =============================================================================

# --- Binance Futures API (choose one of the two options below) ---

# Option 1: Single set of keys (swap these when switching testnet vs live)
# BINANCE_API_KEY=your_api_key_here
# BINANCE_API_SECRET=your_api_secret_here

# Option 2 (recommended): Separate keys — keep both and switch with USE_TESTNET only
# Testnet: create at https://testnet.binancefuture.com (demo trading, no real money)
BINANCE_TESTNET_API_KEY=
BINANCE_TESTNET_API_SECRET=

# Mainnet: create at Binance → API Management → Enable USDT-M Futures (real money)
BINANCE_MAINNET_API_KEY=
BINANCE_MAINNET_API_SECRET=

# true = use testnet (demo), false = use mainnet (live). Ignored if using Option 1.
USE_TESTNET=true

# --- Symbol and timeframe ---
SYMBOL=ZECUSDT
TIMEFRAME=5m

# --- Execution ---
LEVERAGE=5

# --- Risk (optional overrides; also in config.yaml) ---
RISK_PER_TRADE_USD=10
MAX_DAILY_LOSS_USD=50

# --- Strategy overrides (optional) ---
# EMA_FAST=9
# EMA_SLOW=21
# RSI_LEN=7
# ATR_LEN=14
# ATR_STOP_MULT=0.8
# ATR_TP_MULT=1.6
# VOL_MULT=1.5
# RSI_LONG_MIN=48
# RSI_SHORT_MAX=52
# COOLDOWN_CANDLES=1

# --- Telegram (optional) ---
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# --- Logging ---
# LOG_LEVEL=INFO
